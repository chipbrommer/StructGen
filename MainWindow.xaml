<Window x:Class="StructGen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StructGen"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="400" 
        Width="500"
        ResizeMode="NoResize"
        Background="DarkGray">
    <Grid>
        <Border Margin="10px" CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
        
                <!-- Row 1 - Input file selection -->
                <Border Grid.Row="1" Background="White" CornerRadius="10" Margin="5">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock VerticalAlignment="Top" Margin="0 0 30 0" FontSize="12" Text="Select input file:"/>
                            <Button Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left" Width="70" Height="20"  Content="Browse" Click="InputBrowseButton_Click"/>
                        </Grid>

                        <TextBox Grid.Row="1" x:Name="InputFilePathTextBox" IsReadOnly="True" Width="auto" Height="20" VerticalAlignment="Bottom" FontSize="12"/>
                    </Grid>
                </Border>

                <!--Row 2 - File generation type -->
                <Border Grid.Row="2" Background="White" CornerRadius="10" Margin="5">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <GroupBox Grid.Column="0" Header="File Generation Type" HorizontalAlignment="Left" VerticalAlignment="Top">
                            <StackPanel Orientation="Horizontal">
                                <CheckBox x:Name="CRadioButton" Content="C" Margin="10,0,10,0" />
                                <CheckBox x:Name="CppRadioButton" Content="C++" Margin="10,0,10,0" />
                                <CheckBox x:Name="CSharpRadioButton" Content="C#" Margin="10,0,10,0" />
                            </StackPanel>
                        </GroupBox>
                        <Grid Grid.Column="1">
                            <CheckBox x:Name="FileDescSelector" Content="Create File Description Document" VerticalAlignment="Center" />
                        </Grid>
                    </Grid>
                </Border>

                <!--Row 3 - Selectable file output location -->
                <Border Grid.Row="3" Background="White" CornerRadius="10" Margin="5">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock VerticalAlignment="Top" Margin="0 0 30 0" FontSize="12" Text="Select output location:"/>
                            <Button Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Left" Width="70" Height="20"  Content="Browse" Click="OutputBrowseButton_Click"/>
                        </Grid>

                        <TextBox Grid.Row="1" x:Name="OutputFilePathTextBox" IsReadOnly="True" Width="auto" Height="20" VerticalAlignment="Bottom" FontSize="12"/>
                    </Grid>
                </Border>

                <!--Row 4 - File generation type -->
                <Border Grid.Row="4" Background="White" CornerRadius="10" Margin="5">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" VerticalAlignment="Center" Width="90" Height="30" Margin="20,0,20,0" Content="Preview" Click="PreviewButton_Click"/>
                        <Button Grid.Column="1"  VerticalAlignment="Center" Width="90" Height="30" Margin="20,0,20,0" Content="Generate" Click="GenerateButton_Click"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
